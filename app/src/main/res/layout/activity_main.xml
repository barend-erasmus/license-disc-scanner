<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8px"
    tools:context="com.erasmus.barend.licensediscscanner.MainActivity">

    <Button
        android:id="@+id/btn_scan"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Scan" />

    <TextView
        android:id="@+id/txt_device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Id: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Scanned Details " />

    <TextView
        android:id="@+id/txt_registration_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Number: No Information" />

    <TextView
        android:id="@+id/txt_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make: No Information" />

    <TextView
        android:id="@+id/txt_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model: No Information" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#909090" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Statistics" />

    <TextView
        android:id="@+id/txt_statistics_number_of_scans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Scans: " />

    <Button
        android:id="@+id/btn_upload_license_discs"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Upload License Discs" />

    <Button
        android:id="@+id/btn_download_hashes"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Download Hashes" />

</LinearLayout>
